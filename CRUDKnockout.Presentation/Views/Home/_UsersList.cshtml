
@{
    ViewBag.Title = "_UsersList";
}

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
           
            <th>Name</th>           
            <th>Age</th>
            <th>Gender</th>            
            <th>Action</th>
            <th>UserDetail</th>
        </tr>
    </thead>

    <tbody data-bind="foreach: users">
        <tr>
            <td data-bind="text: Name"></td>           
            <td data-bind="text: Age"></td>
            <td data-bind="text: Gender"></td>         
            <td>
                <input type="button" class="btn btn-danger btn-xs" value=" [x] Delete " data-bind="click: $parent.removeUser" />
                <input type="button" class="btn btn-primary btn-xs" value="Edit " data-bind="click: $parent.EditUser" /></td>
               <td> <input type="button" class="btn btn-default btn-xs" value="Detail" data-bind="click: $parent.Detail" />
            </td>
        </tr>
    </tbody>
</table>

<br />
<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <h5> Update</h5>
            <input type="text" data-bind="textInput:EditName">
            <input type="text" data-bind="textInput:EditAddress">
            <input type="text" data-bind="textInput:EditPhoneNumber">
            <input type="button" value="Update" data-bind="click:UpdatedUser">
        </div>
    </div>
</div>

<div class="modal fade"  role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content" >
            <h5>User Detail</h5>
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>PhoneNumber</th>
                    </tr>
                </thead>
                    <tr>
                        <td data-bind="text: DetailName"></td>
                        <td data-bind="text: DetailAddress"></td>
                        <td data-bind="text: DetailAge"></td>
                        <td data-bind="text: DetailGender"></td>
                        <td data-bind="text: DetailPhoneNumber"></td>                        
                    </tr>
            
            </table>
        </div>
    </div>
</div>

